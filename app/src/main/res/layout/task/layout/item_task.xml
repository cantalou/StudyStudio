<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="com.wy.studystudio.ui.task.fragment.TaskAdapter" />

        <variable
            name="item"
            type="com.wy.studystudio.ui.task.model.Task" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:onClick="@{(view) -> adapter.show(view,item)}"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@{item.name}"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/title"
            app:layout_constraintBottom_toTopOf="@+id/review_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/review_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{@string/review_time(adapter.reviewTime(item))}"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/tips"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"/>

        <TextView
            android:id="@+id/phase_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{@string/phase_info(adapter.phaseInfo(item))}"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/tips"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/review_time"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="@{(view)->adapter.edit(view,item)}"
            android:src="@drawable/edit"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_BBBBBB"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/phase_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
