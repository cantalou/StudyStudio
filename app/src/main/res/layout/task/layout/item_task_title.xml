<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="com.wy.studystudio.ui.task.fragment.TaskAdapter" />

        <variable
            name="item"
            type="com.wy.studystudio.ui.task.model.Task" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:onClick="@{(view) -> adapter.show(view,item)}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lineBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/black_EEEEEE"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@{item.name}"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/title"
            app:layout_constraintBottom_toTopOf="@+id/review_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineBar" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_999999"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/task_empty"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/tips"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
